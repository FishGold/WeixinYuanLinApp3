<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!--公众号appid和appsecret-->
    <context-param>
        <param-name>appId</param-name>
        <param-value>wx530299b7dd584037</param-value>
    </context-param>
    <context-param>
        <param-name>appSecret</param-name>
        <param-value>d4624c36b6795d1d99dcf0547af5443d</param-value>
    </context-param>



    <!--过滤字符编码为UTF-8-->
    <filter>
        <filter-name>encoding</filter-name>
        <filter-class>com.hbuas.filter.EncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>encoding</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <!--登陆权限控制-->
    <filter>
        <filter-name>login</filter-name>
        <filter-class>com.hbuas.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/shop</url-pattern>
        <url-pattern>/test</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <!--mysql数据源，使用tomcat-jdbc-->
    <resource-ref>
        <res-ref-name>jdbc/mysql/yuanlin</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>